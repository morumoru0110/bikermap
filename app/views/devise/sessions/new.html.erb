<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :email, class: "label has-text-white" %>
    <p class="control has-icons-left">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", class: "input is-small has-text-white has-background-black" %>
      <span class="icon is-small is-left">
        <i class="fas fa-motorcycle"></i>
      </span>
    </p>
  </div>

  <div class="field">
    <%= f.label :password, class: "label has-text-white" %>
    <p class="control has-icons-left">
      <%= f.password_field :password, autocomplete: "current-password", :placeholeder => "password", class: "input is-small has-text-white has-background-black" %>
      <span class="icon is-small is-left">
        <i class="fas fa-motorcycle"></i>
      </span>
    </p>
  </div>

    <div class="actions">
      <%= f.submit "LOG IN", class: "button is-black has-text-white is-capitalized has-text-weight-bold" %>
    </div>
  <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
