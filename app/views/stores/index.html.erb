<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @stores.each do |store| %>
        <div class="column is-3">
          <div class="card has-text-white has-background-black">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to store_path(store) do %>
                  <%= attachment_image_tag store, :image %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= link_to user_path(store.user.id) do %>
                      <%= attachment_image_tag store.user, :profile_image, fallback: "no-image.png" %>
                    <% end %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="title"><%= link_to store.user.username, user_path(store.user.id) %></div>
                </div>
              </div>
              <div class="content">
                <time><%= store.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>