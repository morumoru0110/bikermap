<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @store, :image %>
            </figure>
          </div>
          <div class="card-content has-background-black">
            <div class="media ">
              <div class="media-content">
                <p class="title is-4 has-text-white"><%= @store.title %></p>
              </div>
            </div>
            <div class="content has-background-black has-text-white">
              <table class="table is-narrow has-background-black has-text-white">
                <tr>
                  <th class="content has-text-white">DETAILS</th>
                </tr>
                <tr>
                  <td><%= simple_format @store.body %></td>
                <tr>
              </table>
              <% if @store.user.id == current_user.id %>
                <%= link_to "Edit", edit_store_path(@store), class: "button is-black" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="column is-4 ">
        <article class="panel is-link has-background-black">
          <p class="panel-heading has-background-black">
            <%= @store.user.username %>
          </p>
          <div class="panel-block has-text-white">
            <p class="control">
              <%= @store.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@store.user), class: "panel-block" do %>
          <span class="panel-icon has-text-white">
            <i class="fas fa-motorcycle" aria-hidden="true"></i>
          </span>
          <div class="panel-block has-text-white">
            <%= @store.user.username %>のページへ
          </div>
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>