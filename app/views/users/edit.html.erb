<% if@user.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@store.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul> 
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @user do |f| %>
          <div class="field">
            <%= f.label :username, "Name", class: "label has-text-white" %>
            <%= f.text_field :username, class: "input is-small has-text-white has-background-black" %>
          </div>

          <div class="field">
            <%= f.label :email, "Email", class: "label has-text-white" %>
            <%= f.text_field :email, class: "input is-small has-text-white has-background-black" %>
          </div>

          <div class="field">
            <%= f.label :profile, "Profile", class: "label has-text-white" %>
            <%= f.text_area :profile, class: "textarea is-small has-text-white has-background-black" %>
          </div>

          <div class="field">
            <%= f.label :profile_image, "Profile Image", class:"label has-text-white" %>
            <%= f.attachment_field :profile_image, class: "input has-text-white has-background-black" %>
          </div>

          <%= f.submit "update", class: "button is-black has-text-white is-capitalized has-text-weight-bold" %>
        <% end %>
      </div>
    </div>
  </div>
</section>